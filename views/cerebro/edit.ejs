<%include _header%>

<div class="row container">
    <div class="col-md-12">
        <form action="/cerebros/edit/<%=cerebro.id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="sabor">Sabor</label>
                <input type="text" class="form-control" name="sabor" value="<%= cerebro.sabor%>">
            </div>
            <div class="form-group">
                <label for="descripcion">Descripcion</label>
                <input type="text" class="form-control" name="descripcion" value="<%= cerebro.descripcion%>">
            </div>
            <div class="form-group">
                <label for="iq">IQ</label>
                <input type="text" class="form-control" name="iq" value="<%= cerebro.iq%>">
            </div>
            
            <% if(mensajeError.lenght>0){%>
            <div id="messageNew"> 
                <div class="alert alert-warning alert-dismissible fade show mensaje" role="alert">
                  <strong><%= mensajeError%></strong>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
              </div>
          </div>
          <% } %>

                <button class="btn btn-primary"><i class="fas fa-bong"></i>Actualizar</button>
        </form>
    </div>
</div>

<%include _footer%>
