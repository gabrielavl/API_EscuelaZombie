<% include  _header%> 
<h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <h1>Lista de cerebros</h1>
    <table class="table table-striped table-primary">
      <tr>
        <th>Flavor</th>
        <th>Description</th>
        <th>IQ</th>
        <th>Opciones</th>
      </tr>
      <%
      if(coleccion){
        coleccion.forEach(function(cerebros){
      %>
      <tr>
        <td> <%= cerebros.sabor %> </td>
        <td> <%= cerebros.descripcion %> </td>
        <td> <%= cerebros.iq %> </td>
        <td>
          <a href="/cerebros/edit/<%=cerebros.id%>"><i class="fas fa-edit" title="Editar"></i></a>
          
          <a href="/cerebros/delete/<%=cerebros.id%>"><i class="fas fa-trash-alt" title="Eliminar"></i></a>
        </td>
      </tr>
      <% 
    });}
      %>
    </table>
    <a href="/cerebro/add"><button class="btn btn-primary">Agregar cerebro</button></a>
</body>
</html>

